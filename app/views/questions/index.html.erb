<h1>Questions</h1>
<h2><%= @quote %></h2>

<ul>
  <% @questions.each do |question| %>
  <li><%= link_to question.title, question_path(question) %> <h4><%= question.votes.where(direction: :up).count - question.votes.where(direction: :down).count %></li><%= button_to 'Upvote', upvote_question_path(question.id) %><%= button_to 'Downvote', downvote_question_path(question.id) %>
  <% end %>
</ul>

<%= link_to 'Create Question', new_question_path %>


